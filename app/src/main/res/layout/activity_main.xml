<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conjuctionTitle"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    //rij 1
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:text="A"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_marginRight="100dp"
      />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="B" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="94dp"
        android:layout_toRightOf="@id/textView2"
        android:text="A ^ B" />

    //rij 2

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/textView2"
        android:layout_marginRight="100dp"
        android:text="T" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/textView4"
        android:text="T" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_below="@id/textView3"
        android:layout_alignBottom="@id/textView5"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@id/textView2"
        android:text="" />



    //rij 3

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/textView2"
        android:layout_marginRight="100dp"
        android:text="T" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_toRightOf="@id/textView4"
        android:layout_marginTop="50dp"
        android:text="F" />


    //Rij 4

    <EditText
        android:id="@+id/editTextText9"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText6"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@id/textView8"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/textView2"
        android:layout_marginRight="100dp"
        android:text="F" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_toRightOf="@id/textView10"
        android:layout_marginTop="50dp"
        android:text="T" />


    //rij 5

    <EditText
        android:id="@+id/editTextTextPersonName12"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextText9"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/textView11"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/textView2"
        android:layout_marginRight="100dp"
        android:text="F" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/textView13"
        android:text="F" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName12"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/textView11"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    //rij 7

    <Button
        android:id="@+id/btn_sumbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView34"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"
        android:text="@string/btnSumbit"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sumbit"
        android:layout_marginTop="-33dp"
        android:text="TextView" />


</RelativeLayout>